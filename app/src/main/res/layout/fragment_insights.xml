<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvInsightsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spending Insights"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnShowInsights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Insights"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="180dp"
    android:elevation="4dp"/>

    <Button
        android:id="@+id/btnAnalyze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Insights"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvInsightsResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your insights will appear here..."
            android:textSize="16sp"/>
    </ScrollView>
</LinearLayout>